<%- include("partials/header") %>
<title>Login</title>
<link rel="stylesheet" type="text/css" href="/css/home.css">
</head>
<body>
    <div class="login-wrap">
        <div id="register">
          <a href="/register" class="new">Student registration</a>
        </div>
        <div class="login-html">
          <div class="title">
            STUDENT GRIEVANCE SUPPORT SYSTEM
            <hr>
          </div>
          
          <input id="tab-1" type="radio" name="tab" class="sign-in" checked>
          <label for="tab-1" class="tab"> Student </label>
          <input id="tab-2" type="radio" name="tab" class="sign-up">
          <label for="tab-2" class="tab"> Admin </label>
          
          <div class="login-form">

            <form action="/studentlogin" method="POST" autocomplete="off">
              <div class="sign-in-htm">
                <div class="group">
                  <label for="user" class="label">NAME</label>
                  <input id="user" type="text" class="input" name="name">
                </div>
                <div class="group">
                  <label for="user" class="label">USN</label>
                  <input id="user" type="text" class="input" name="usn">
                </div>
                <div class="group">
                  <label for="pass" class="label">Password</label>
                  <input id="pass" type="password" class="input" data-type="password" name="password">
                </div>
                <div class="group">
                  <input id="check" type="checkbox" class="check" checked>
                  <label for="check"><span class="icon"></span> Keep me signed in</label>
                </div>
                <div class="group">
                  <input type="submit" class="button" value="Sign In">
                </div>
                <div class="hr"></div>
                <!--<div class="foot-lnk">
                  <a href="#forgot">Forgot Password?</a>
                </div>-->
              </div>
            </form>

    
            <form action="/adminlogin" method="POST" autocomplete="off">
              <div class="sign-up-htm">
                <div class="group">
                  <label for="user" class="label">Admin ID</label>
                  <input id="user" type="number" class="input" name="adminid">
                </div>
                <div class="group">
                  <label for="user" class="label">Admin name</label>
                  <input id="user" type="text" class="input" name="aname">
                </div>
                <div class="group">
                  <label for="pass" class="label">Password</label>
                  <input id="pass" type="password" class="input" data-type="password" name="apassword">
                </div>
                <div class="group">
                  <label for="pass" class="label">Email Address</label>
                  <input id="pass" type="text" class="input" name="aemail">
                </div>
                <div class="group addsubmit">
                  <input type="submit" class="button" value="Sign In as Admin">
                </div>
                <div class="hr"></div>
              </div>
            </form>


          </div>
        </div>
      </div>
      </div>

<%- include("partials/footer") %>